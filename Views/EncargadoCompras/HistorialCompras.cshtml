@model IEnumerable<PhoneStore_Website.Models.Compra>
@{
    ViewData["Title"] = "Historial de Compras";
    Layout = "_Layout";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">Historial de Compras</h2>
        <a asp-action="Purchase_Index" class="btn btn-outline-secondary" title="Volver al menú principal">
            <i class="bi bi-arrow-left me-1"></i> Volver
        </a>
    </div>

    @if (ViewBag.Mensaje != null)
    {
        <div class="alert alert-info text-center">@ViewBag.Mensaje</div>
    }

    <table class="table table-bordered table-striped text-center">
        <thead class="table-dark">
            <tr>
                <th>ID Compra</th>
                <th>Empleado</th>
                <th>Proveedor</th>
                <th>Tipo Documento</th>
                <th>N° Documento</th>
                <th>Total</th>
                <th>Fecha</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var compra in Model)
                {
                    <tr>
                        <td>@compra.Purchase_Id</td>
                        <td>@compra.empleado.Employee_Fullname</td>
                        <td>@compra.proveedores.Prov_Name</td>
                        <td>@compra.Doc_Type</td>
                        <td>@compra.Doc_Num</td>
                        <td>C$@compra.Total.ToString("N2")</td>
                        <td>@compra.Reg_Date?.ToString("dd/MM/yyyy")</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="7">No hay compras registradas.</td>
                </tr>
            }
        </tbody>
    </table>
</div>
