@{
    ViewData["Title"] = "Menú Encargado de Compras";
    Layout = "_Layout";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

<style>
    .card-hover {
        transition: transform 0.2s ease-in-out;
    }

        .card-hover:hover {
            transform: scale(1.03);
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.15);
        }
</style>

<div class="container mt-5">
    <h2 class="text-center mb-4 text-primary">Menú Principal - Encargado de Compras</h2>

    <div class="row justify-content-center">
        <div class="col-md-4">
            <a asp-action="ListaProveedores" class="text-decoration-none">
                <div class="card card-hover text-center">
                    <div class="card-body">
                        <i class="bi bi-people-fill fs-1 text-info"></i>
                        <h5 class="card-title mt-2">Ver Lista de Proveedores</h5>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-md-4">
            <a asp-action="HistorialCompras" class="text-decoration-none">
                <div class="card card-hover text-center">
                    <div class="card-body">
                        <i class="bi bi-clock-history fs-1 text-success"></i>
                        <h5 class="card-title mt-2">Consultar Historial de Compras</h5>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-md-4">
            <a asp-action="RegistrarCompra" class="text-decoration-none">
                <div class="card card-hover text-center">
                    <div class="card-body">
                        <i class="bi bi-cart-plus fs-1 text-warning"></i>
                        <h5 class="card-title mt-2">Realizar Compra a Proveedor</h5>
                    </div>
                </div>
            </a>
        </div>
    </div>
</div>
