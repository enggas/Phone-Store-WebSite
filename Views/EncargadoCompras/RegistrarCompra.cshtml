@model PhoneStore_Website.Models.Compra

@{
    ViewData["Title"] = "Registrar Compra";
    Layout = "_Layout";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5">
    <h2 class="mb-4 text-center">Registrar Nueva Compra</h2>

    @using (Html.BeginForm("RegistrarCompra", "EncargadoCompras", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="mb-3">
            @Html.LabelFor(m => m.Prov_ID, "Proveedor", new { @class = "form-label" })
            @Html.DropDownListFor(m => m.Prov_ID, (SelectList)ViewBag.Proveedores, "Seleccione un proveedor", new { @class = "form-select" })
            @Html.ValidationMessageFor(m => m.Prov_ID, "", new { @class = "text-danger" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(m => m.Id_Empleado, "Empleado Encargado", new { @class = "form-label" })
            @Html.DropDownListFor(m => m.Id_Empleado, (SelectList)ViewBag.Empleados, "Seleccione un empleado", new { @class = "form-select" })
            @Html.ValidationMessageFor(m => m.Id_Empleado, "", new { @class = "text-danger" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(m => m.Doc_Type, new { @class = "form-label" })
            @Html.TextBoxFor(m => m.Doc_Type, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Doc_Type, "", new { @class = "text-danger" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(m => m.Doc_Num, new { @class = "form-label" })
            @Html.TextBoxFor(m => m.Doc_Num, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Doc_Num, "", new { @class = "text-danger" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(m => m.Total, new { @class = "form-label" })
            @Html.TextBoxFor(m => m.Total, new { @class = "form-control", type = "number", step = "0.01" })
            @Html.ValidationMessageFor(m => m.Total, "", new { @class = "text-danger" })
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-primary">Registrar Compra</button>
            <a asp-action="Purchase_Index" class="btn btn-secondary ms-2">Cancelar</a>
        </div>
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
