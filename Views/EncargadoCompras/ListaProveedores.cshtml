@model IEnumerable<PhoneStore_Website.Models.Proveedores>
@{
    ViewData["Title"] = "Lista de Proveedores";
    Layout = "_Layout";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css" rel="stylesheet" />

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-dark">Lista de Proveedores</h2>
        <a asp-action="Purchase_Index" class="btn btn-outline-dark rounded-circle" title="Volver al menú principal">
            <i class="bi bi-arrow-left-circle fs-4"></i>
        </a>
    </div>

    <table class="table table-bordered table-striped text-center">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Nombre Proveedor</th>
                <th>Teléfono</th>
                <th>Correo Electrónico</th>
                <th>Dirección</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var proveedor in Model)
                {
                    <tr>
                        <td>@proveedor.Prov_Id</td>
                        <td>@proveedor.Prov_Name</td>
                        <td>@proveedor.Telephone</td>
                        <td>@proveedor.Gmail</td>
                        <td>@proveedor.Prov_Address</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="5">No hay proveedores registrados.</td>
                </tr>
            }
        </tbody>
    </table>
</div>
