<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PhoneStore</title>

    <!-- Bootstrap CSS (usando CDN con fallback local) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

    <!-- Estilos locales -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PhoneStore_Website.styles.css" asp-append-version="true" />

    <!-- Sección de estilos específicos de vista -->
    @RenderSection("Styles", required: false)

    <style>
        html, body {
            margin: 0;
            padding: 0;
            height: 100%;
            background-color: #006d77;
        }
    </style>
</head>
<body>
    <div class="container-fluid p-0">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="text-white py-3" style="background-color: #004f56;">
        <div class="container text-center">
            &copy; @DateTime.Now.Year - PhoneStore
        </div>
    </footer>

    <!-- Scripts comunes -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    <!-- Bootstrap JS Bundle con Popper (CDN con fallback local) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz"
            crossorigin="anonymous"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Scripts locales -->
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- Sección de scripts específicos de vista -->
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
