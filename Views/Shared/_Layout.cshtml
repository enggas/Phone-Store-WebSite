<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title> <!-- Eliminado el sufijo - PhoneStore_Website -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PhoneStore_Website.styles.css" asp-append-version="true" />
    <style>
        html, body {
            margin: 0;
            padding: 0;
            height: 100%;
            background-color: #006d77;
        }
    </style>
</head>
<body>
    <!-- Eliminado completamente el header -->

    <div class="container-fluid p-0">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="text-white py-3" style="background-color: #004f56;">
        <div class="container text-center">
            &copy; 2025 - PhoneStore_Website
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
