    <script>
        // === CARRUSEL DE IMÁGENES ===
        const imgs = document.querySelectorAll(".carousel-img");
        let index = 0;

        function rotateImages() {
            imgs.forEach((img, i) => {
                img.classList.remove("active");
                img.style.transform = "scale(0.95)";
            });

            imgs[index].classList.add("active");
            imgs[index].style.transform = "scale(1)";

            index = (index + 1) % imgs.length;
        }

        if (imgs.length > 0) {
            imgs[0].classList.add("active");
            imgs[0].style.transform = "scale(1)";
            let carouselInterval = setInterval(rotateImages, 5000);

            // Pausa el carrusel al hacer hover
            const heroRight = document.querySelector(".hero-right");

            heroRight.addEventListener("mouseenter", () => {
                clearInterval(carouselInterval);
            });

            heroRight.addEventListener("mouseleave", () => {
                carouselInterval = setInterval(rotateImages, 5000);
            });
        }

        // === BARRA DE BÚSQUEDA ===
        const input = document.getElementById("searchInput");
        input.addEventListener("input", function () {
            const filter = input.value.toLowerCase();
            document.querySelectorAll(".product-card").forEach(card => {
                const name = card.getAttribute("data-name");
                card.style.display = name.includes(filter) ? "block" : "none";
            });
        });

    

                // === BACK TO TOP BUTTON ===
        const backToTopButton = document.querySelector('.back-to-top');

        window.addEventListener('scroll', () => {
            if (window.scrollY > 300) {
                backToTopButton.classList.add('active');
            } else {
                backToTopButton.classList.remove('active');
            }
        });

        backToTopButton.addEventListener('click', (e) => {
            e.preventDefault();
            window.scrollTo({
                top: 0,
                behavior: 'smooth'
            });
        });

        // === ANIMACIONES AL HACER SCROLL ===
        const animateOnScroll = () => {
            const elements = document.querySelectorAll('.product-card, .feature-box');
            
            elements.forEach(element => {
                const elementPosition = element.getBoundingClientRect().top;
                const screenPosition = window.innerHeight / 1.2;
                
                if (elementPosition < screenPosition) {
                    element.style.opacity = '1';
                    element.style.transform = 'translateY(0)';
                }
            });
        };

        window.addEventListener('scroll', animateOnScroll);
        window.addEventListener('load', animateOnScroll);
    </script>
