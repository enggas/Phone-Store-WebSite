@model PhoneStore_Website.Models.Empleado
@{
    ViewData["Title"] = "Crear Empleado";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

<style>
    :root {
        --primary-color: #005f6b;
        --primary-dark: #003d44;
        --primary-light: #008c9e;
        --secondary-color: #ff6b6b;
        --secondary-dark: #ff5252;
        --light-bg: #f8f9fa;
        --dark-text: #2d3436;
        --light-text: #f5f6fa;
        --gray-text: #636e72;
        --transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
    }

    body {
        background-color: var(--light-bg);
        font-family: 'Segoe UI', sans-serif;
        padding: 2rem;
    }

    .form-container {
        background-color: white;
        border-radius: 10px;
        padding: 2rem;
        box-shadow: 0 4px 10px rgba(0,0,0,0.1);
        max-width: 600px;
        margin: auto;
    }

    h2 {
        color: var(--primary-dark);
        margin-bottom: 2rem;
    }

    label {
        font-weight: 600;
        color: var(--primary-dark);
    }

    .form-control {
        border-radius: 8px;
        border: 1px solid var(--primary-light);
        margin-bottom: 1.2rem;
    }

    .btn-submit {
        background-color: var(--primary-color);
        color: white;
        border: none;
        border-radius: 25px;
        padding: 10px 25px;
        transition: var(--transition);
    }

    .btn-submit:hover {
        background-color: var(--primary-dark);
    }

    .validation-summary-errors {
        color: var(--secondary-dark);
        margin-bottom: 1rem;
    }
</style>

<div class="form-container">
    <h2>Registrar Nuevo Empleado</h2>

    @using (Html.BeginForm("CrearEmpleado", "Administrador", FormMethod.Post))
    {
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.Cedula)
            @Html.TextBoxFor(model => model.Cedula, new { @class = "form-control", placeholder = "000-000000-0000X" })
            @Html.ValidationMessageFor(model => model.Cedula, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Employee_Fullname)
            @Html.TextBoxFor(model => model.Employee_Fullname, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Employee_Fullname, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Gmail)
            @Html.TextBoxFor(model => model.Gmail, new { @class = "form-control", type = "email" })
            @Html.ValidationMessageFor(model => model.Gmail, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Pssword)
            @Html.PasswordFor(model => model.Pssword, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Pssword, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Role_Id)
            @Html.DropDownListFor(model => model.Role_Id, new List<SelectListItem>
            {
                new SelectListItem { Text = "Administrador", Value = "1" },
                new SelectListItem { Text = "Encargado de Ventas", Value = "2" },
                new SelectListItem { Text = "Encargado de Compras", Value = "3" }
            }, "Seleccione un Rol", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Role_Id, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.User_State)
            @Html.CheckBoxFor(model => model.User_State, new { @class = "form-check-input" })
            @Html.ValidationMessageFor(model => model.User_State, "", new { @class = "text-danger" })
        </div>

        <div class="text-center mt-4">
            <button type="submit" class="btn btn-submit">Registrar</button>
        </div>
    }
</div>
